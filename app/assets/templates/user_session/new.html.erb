<form class="form-signin" ng-submit="submitLogin(loginForm)" role="form" ng-init="loginForm = {}">
  <label for="email" class="sr-only">Email address</label>
  <input type="email" name="email" id="email" ng-model="loginForm.email" required="required" class="form-control" class="form-control" placeholder="Email address" required autofocus>
  <label for="password" class="sr-only">Password</label>
  <input type="password" id="password" class="form-control" ng-model="loginForm.password" placeholder="Password" required>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

  <br />
  <authorisation-errors></authorisation-errors>
</form>
<p class="text-center"><a ui-sref="users.register">Register for an account?</a></p>
