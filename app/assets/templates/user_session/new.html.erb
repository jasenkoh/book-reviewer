<div class="clear-form">
  <form ng-submit="submitLogin(loginForm)" role="form" ng-init="loginForm = {}">
    <div class="form-heading gray">
        <h3 class="header center">Sign In</h3>
    </div>
    <div class="form-body">
      <div class="form-signin">
        <label for="email" class="sr-only">Email address</label>
        <input type="email" name="email" id="email" ng-model="loginForm.email" required="required" class="form-control" class="form-control" placeholder="Email address" required autofocus>
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" class="form-control" ng-model="loginForm.password" placeholder="Password" required>
      </div>
    </div>
    <div class="form-footer">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

      <authorisation-errors></authorisation-errors>
    </div>
  </form>
  <p class="text-center">Not a member? <a ui-sref="users.register">Sign up now</a></p>
</div>
