<div class="col-md-8">
  <a ng-if="user.id" ui-sref='books.new' class="btn btn-primary">{{ review }}</a>
  <hr />

  <ul class="list-unstyled col-sm-8">
    <li class="book row" ng-repeat="book in books">
      <book-cover></book-cover>
      <div class="col-sm-9">
        <h3><a href="http://www.amazon.com/gp/product/{{book.isbn}}">{{book.title}}</a>
          <a ui-sref="books.edit({ id: book.id })">
            <span style="font-size:16px; color:black;" ng-show="user.id" class="glyphicon glyphicon-pencil"></span>
          </a>
        </h3>
        <cite class="text-muted">Written by {{book.author}}</cite>

        <p>{{book.review}}</p>

        <book-genres genres="book.genres"></book-genres>
      </div>
    </li>
  </ul>
</div>
<div class="col-md-4"></div>
