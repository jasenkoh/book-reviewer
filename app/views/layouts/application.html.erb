<!DOCTYPE html>
<html>
<head>
  <title>Book Reviewer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body ng-app='bookApp' >
    <!-- Static navbar -->
    <nav class="navbar navbar-inverse navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" ui-sref='books.list'>Book Reviewer</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse" ng-controller="HeaderCtrl">
          <ul class="nav navbar-nav">
            <li ng-cloak ng-class="{ active: isActive('/')}"><a ui-sref='books.list'>Books</a></li>
            <li ng-cloak ng-if="user.id" ng-class="{ active: isActive('/authors')}"><a ui-sref='authors'>Authors</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li ng-if="user.id" class="dropdown">
              <a ng-cloak class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                <span ng-if='user.name'>{{user.name}}</span>
                <span ng-if='!user.name'>My Profile</span>
                <span class="caret"></span>
              <ul class="dropdown-menu" role="menu">
                <li><a ui-sref='users.edit'>Edit profile</a></li>
                <li class="divider"></li>
                <li ng-cloak>
                  <a ng-click='signOut()'>Sign out</a>
                </li>
              </ul>
            </li>
            <li ng-if="!user.id">
              <a ui-sref='users.sign-in'>Sign in</a>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>


    <div class="container" style="padding:20px">
      <%= yield %>
    </div>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
